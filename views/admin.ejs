<%- include("./partials/header.ejs") %>

<div class="container addShowForm">
  <div class="row row-content">
      <div class="col-12 col-md-8 offset-lg-2">
          <h2><span class="fa fa-plus-circle fa-lg"></span> Insert New Data</h2>
      </div>
      <div class="card col-12 col-lg-8 offset-lg-2">
          <form action="/admin" method="POST" enctype="multipart/form-data">
              <div class="form-group row mt-3">
                  <label for="name" class="col-md-2 col-form-label"><strong>Name</strong></label>
                  <div class="col-md-10">
                      <input type="text" class="form-control" name="name" placeholder="Example: Biriyani" required>
                  </div>
              </div>
            
              <div class="form-group row">
                <label for="genre" class="col-md-2 col-form-label"><strong>Type</strong></label>
                <div class="col-md-10">
                    <div class="form-check-inline">
                      <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" name="type" value="Bengali">Bengali
                      </label>
                    </div>
                    <div class="form-check-inline">
                      <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" name="type" value="North Indian">North Indian
                      </label>
                    </div>
                    <div class="form-check-inline">
                      <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" name="type" value="South Indian">South Indian
                      </label>
                    </div>
                    <div class="form-check-inline">
                      <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" name="type" value="Maharashtrian">Maharashtrian
                      </label>
                    </div>
                    <div class="form-check-inline">
                      <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" name="type" value="Rajasthani">Rajasthani
                      </label>
                    </div>
                    <div class="form-check-inline">
                      <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" name="type" value="Others">Others
                      </label>
                    </div>
                </div>
              </div>
              <div class="form-group row">
                <label for="source" class="col-md-2 col-form-label"><strong>Ingredients</strong></label>
                <div class="col-md-10">
                    <input type="text" class="form-control" name="ingredients" required>
                </div>
            </div>
              <div class="form-group row">
                <label for="synopsis" class="col-md-2 col-form-label"><strong>Method</strong></label>
                <div class="col-md-10">
                    <textarea class="form-control" name="method" rows="4" required></textarea>
                </div>
            </div>
              <div class="form-group row">
                  <label for="synopsis" class="col-md-2 col-form-label"><strong>Description</strong></label>
                  <div class="col-md-10">
                      <textarea class="form-control" id="Synopsis" name="description" rows="4" required></textarea>
                  </div>
              </div>
              <div class="form-group row">
                  <label for="image" class="col-md-2 col-form-label" required><strong>Image</strong></label>
                  <div class="col-md-10">
                      <input type="file" class="form-control" name="image">
                  </div>
              </div>
              <div class="form-group row">
                  <div class="offset-md-2 col-md-10">
                      <button type="submit" class="btn btn-primary"><strong>Insert</strong></button>
                  </div>
              </div>
          </form>
      </div>
  </div>
</div>

<%- include("./partials/footer.ejs") %>