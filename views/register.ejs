<%- include("./partials/header") %>

<div class="container">
    <div class="row">
      <h1>Sign Up</h1>
      <div style="width: 30%; margin: 25px auto;">
        <form action="/register" method="POST">
          <div class="form-group">
            <label>Email: </label>
            <input type="email" name="username" placeholder="Enter a valid email" class="form-control">
          </div>
          <div class="form-group">
            <label>Password: </label>
            <input type="password" name="password" placeholder="Enter a password" class="form-control">
          </div>
          <div class="form-group">
            <label>Confirm Password: </label>
            <input type="password" name="re_password" placeholder="Re-enter password" class="form-control">
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-lg btn-primary">Submit</button>
          </div>
        </form>
        <a href="/">Go Back</a>
      </div>
    </div>
  </div>

<%- include("./partials/footer") %>